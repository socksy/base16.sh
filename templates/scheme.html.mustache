<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{scheme-name}} - base16.sh Color Scheme</title>
    <meta name="description" content="{{scheme-name}} - {{scheme-system}} color scheme by {{scheme-author}}. Download configs for vim, neovim, terminal, tmux, alacritty, kitty, and 70+ apps.">
    <link rel="canonical" href="https://base16.sh/{{scheme-slug}}">

    <!-- Open Graph -->
    <meta property="og:title" content="{{scheme-name}} - base16.sh">
    <meta property="og:description" content="{{scheme-system}} color scheme by {{scheme-author}}. Download for vim, terminal, tmux, and 70+ apps.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://base16.sh/{{scheme-slug}}">
    <meta property="og:image" content="https://base16.sh/og/{{scheme-slug}}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:type" content="image/png">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{scheme-name}} - base16.sh">
    <meta name="twitter:description" content="{{scheme-system}} color scheme by {{scheme-author}}">
    <meta name="twitter:image" content="https://base16.sh/og/{{scheme-slug}}">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible+Mono:wght@400;700&display=swap" as="style">
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #{{base00-hex}};
            --fg: #{{base05-hex}};
            --muted: #{{base03-hex}};
            --accent: #{{base0D-hex}};
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Atkinson Hyperlegible Mono', monospace;
            background: var(--bg);
            color: var(--fg);
            font-size: 15px;
            line-height: 1.65;
        }
        .container { max-width: 960px; margin: 0 auto; padding: 40px 20px; }

        .nav { display: flex; justify-content: space-between; align-items: center; }
        .nav a { color: var(--muted); text-decoration: none; font-size: 14px; }
        .nav a:hover { color: var(--fg); }
        .nav-center { display: flex; gap: 12px; align-items: center; }
        .nav-center .disabled { color: var(--bg); font-size: 14px; }

        header { margin: 40px 0 60px; }
        h1 {
            font-size: 36px;
            font-weight: 400;
            letter-spacing: -1px;
            line-height: 1;
            margin-bottom: 8px;
        }
        header p { color: var(--muted); font-size: 14px; }

        .palette { margin-bottom: 60px; }
        .palette svg { width: 100%; height: 40px; }

        section { margin-bottom: 60px; }
        h2 {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 400;
            color: var(--muted);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--fg);
        }

        .code-examples {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }
        .code-block { border: 1px solid var(--fg); min-width: 0; }
        .code-label {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--muted);
            padding: 8px 12px;
            border-bottom: 1px solid var(--fg);
        }
        .code-block pre {
            margin: 0;
            padding: 12px;
            font-size: 13px;
            line-height: 1.5;
            overflow-x: auto;
            background: #{{base00-hex}};
            color: #{{base05-hex}};
        }
        .comment { color: #{{base03-hex}}; }
        .keyword { color: #{{base0E-hex}}; }
        .function { color: #{{base0D-hex}}; }
        .string { color: #{{base0B-hex}}; }
        .number { color: #{{base09-hex}}; }

        .hex-color { padding: 0 2px; cursor: pointer; transition: background 0.05s; }
        .hex-color:hover { background: var(--fg); }
        .hex-color.active { outline: 2px solid var(--accent); outline-offset: 1px; }

        .yaml-block {
            position: relative;
            border: 1px solid var(--fg);
        }
        .yaml-block pre {
            margin: 0;
            padding: 16px;
            font-size: 13px;
            line-height: 1.5;
            overflow-x: auto;
        }
        .copy-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: var(--bg);
            color: var(--fg);
            border: 1px solid var(--fg);
            padding: 4px 8px;
            font-family: inherit;
            font-size: 11px;
            cursor: pointer;
        }
        .copy-btn:hover { background: var(--fg); color: var(--bg); }

        footer {
            margin-top: 80px;
            padding-top: 20px;
            border-top: 1px solid var(--fg);
            font-size: 12px;
            color: var(--muted);
        }
        footer a {
            color: var(--muted);
        }
        footer a:hover {
            color: var(--fg);
        }

        .downloads-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        .download-link {
            display: inline-block;
            padding: 4px 10px;
            border: 1px solid var(--fg);
            color: var(--fg);
            text-decoration: none;
            font-size: 13px;
        }
        .download-link:hover {
            background: var(--fg);
            color: var(--bg);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="nav">
            <a id="back-link" href="/" title="base03">&larr; back</a>
            <span class="nav-center">
                {{#has-prev}}<a href="{{prev-href}}" title="{{prev-scheme}}">&larr; prev</a>{{/has-prev}}{{^has-prev}}<span class="disabled">&larr; prev</span>{{/has-prev}}
                {{#has-next}}<a href="{{next-href}}" title="{{next-scheme}}">next &rarr;</a>{{/has-next}}{{^has-next}}<span class="disabled">next &rarr;</span>{{/has-next}}
            </span>
            <a href="/--random" id="random-link" title="base03">random</a>
        </div>
        <script>
            const ref = document.referrer;
            if (ref && new URL(ref).origin === location.origin) {
                const params = new URL(ref).search;
                if (params) document.getElementById('back-link').href = '/' + params;
            }
        </script>

        <header>
            <h1 title="base05">{{scheme-name}}</h1>
            <p title="base03">{{scheme-system}} / {{scheme-author}}</p>
        </header>

        <div class="palette">{{{palette-svg}}}</div>

        <section>
            <h2 title="base03">Preview</h2>
            <div class="code-examples">
                <div class="code-block">
                    <div class="code-label" title="base03">Rust</div>
                    <pre title="base05"><span class="comment" title="base03">// Check if prime</span>
<span class="keyword" title="base0E">fn</span> <span class="function" title="base0D">is_prime</span>(n: <span class="keyword" title="base0E">u32</span>) -> <span class="keyword" title="base0E">bool</span> {
    <span class="keyword" title="base0E">if</span> n < <span class="number" title="base09">2</span> { <span class="keyword" title="base0E">return false</span> }
    (<span class="number" title="base09">2</span>..n).<span class="function" title="base0D">all</span>(|i| n % i != <span class="number" title="base09">0</span>)
}</pre>
                </div>
                <div class="code-block">
                    <div class="code-label" title="base03">Clojure</div>
                    <pre title="base05"><span class="comment" title="base03">;; Calculate factorial</span>
(<span class="keyword" title="base0E">defn</span> factorial [n]
  (<span class="keyword" title="base0E">if</span> (<span class="function" title="base0D">&lt;=</span> n <span class="number" title="base09">1</span>)
    <span class="number" title="base09">1</span>
    (<span class="function" title="base0D">*</span> n (factorial (<span class="function" title="base0D">dec</span> n)))))</pre>
                </div>
                <div class="code-block">
                    <div class="code-label" title="base03">HTML</div>
                    <pre title="base05"><span class="comment" title="base03">&lt;!-- Page header --&gt;</span>
&lt;<span class="keyword" title="base0E">div</span> <span class="keyword" title="base0E">class</span>=<span class="string" title="base0B">"container"</span>&gt;
  &lt;<span class="keyword" title="base0E">h1</span>&gt;Hello World&lt;/<span class="keyword" title="base0E">h1</span>&gt;
  &lt;<span class="keyword" title="base0E">p</span>&gt;Welcome!&lt;/<span class="keyword" title="base0E">p</span>&gt;
&lt;/<span class="keyword" title="base0E">div</span>&gt;</pre>
                </div>
            </div>
        </section>

        <section>
            <h2 title="base03">YAML</h2>
            <div class="yaml-block">
                <button class="copy-btn" onclick="navigator.clipboard.writeText(document.getElementById('yaml').textContent)">copy</button>
                <pre id="yaml">{{{yaml-colorized}}}</pre>
            </div>
        </section>

        <section>
            <h2 title="base03">Downloads</h2>
            <div class="downloads-grid">
                {{#templates}}
                <a href="{{url}}" class="download-link" download="{{filename}}" title="Download {{filename}}">{{name}}</a>
                {{/templates}}
            </div>
        </section>

        <footer title="base03">
            base16 / base24 color schemes | <a href="https://github.com/socksy/base16.sh">github</a> | by <a href="https://github.com/socksy">@socksy</a> (<a href="https://ben.lovell.io">ben.lovell.io</a>)
        </footer>
    </div>
    <script>
        document.querySelectorAll('.hex-color').forEach(el => {
            el.addEventListener('click', () => {
                document.querySelectorAll('.hex-color.active').forEach(a => a.classList.remove('active'));
                el.classList.add('active');
                const color = el.style.color;
                const base = el.dataset.base || color;
                document.documentElement.style.setProperty('--fg', color);
                document.documentElement.style.setProperty('--muted', color);
                document.querySelectorAll('[title^="base"]').forEach(t => {
                    if (!t.closest('.code-examples')) t.title = base;
                });
            });
        });

        // Vim-style keyboard navigation
        let pendingG = false;
        document.addEventListener('keydown', function(e) {
            if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
            const navLinks = document.querySelectorAll('.nav-center a');
            const prev = navLinks[0];
            const next = navLinks[1];
            const back = document.getElementById('back-link');
            if (pendingG) {
                pendingG = false;
                if (e.key === 'i') { location.href = '/'; e.preventDefault(); }
                return;
            }
            switch (e.key) {
                case 'k':
                    if (prev) { location.href = prev.href; e.preventDefault(); }
                    break;
                case 'j':
                    if (next) { location.href = next.href; e.preventDefault(); }
                    break;
                case 'h':
                case 'u':
                case 'Escape':
                case 'Backspace':
                    if (back) { location.href = back.href; e.preventDefault(); }
                    break;
                case 'r':
                    goRandom();
                    e.preventDefault();
                    break;
                case 'g':
                    pendingG = true;
                    setTimeout(() => pendingG = false, 1000);
                    e.preventDefault();
                    break;
                case '?':
                    alert('Keyboard shortcuts:\n\nj     next scheme\nk     prev scheme\nh     back to index\nr     random scheme\ng i   go to index\n?     show this help');
                    e.preventDefault();
                    break;
            }
        });

        const schemes = {{{schemes-json}}};
        function goRandom() {
            const scheme = schemes[Math.floor(Math.random() * schemes.length)];
            const order = new URLSearchParams(location.search).get('order') === 'color' ? '?order=color' : '';
            location.href = '/' + scheme + order;
        }
        document.getElementById('random-link').addEventListener('click', function(e) {
            e.preventDefault();
            goRandom();
        });
    </script>
</body>
</html>
