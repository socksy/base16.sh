<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>base16.sh</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible+Mono:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #fff;
            --fg: #000;
            --muted: #666;
            --accent: #00f;
        }
        @media (prefers-color-scheme: dark) {
            :root {
                --bg: #000;
                --fg: #fff;
                --muted: #888;
                --accent: #0ff;
            }
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Atkinson Hyperlegible Mono', monospace;
            background: var(--bg);
            color: var(--fg);
            font-size: 15px;
            line-height: 1.65;
        }
        .container { max-width: 1200px; margin: 0 auto; padding: 40px 20px; }

        header { margin-bottom: 60px; }
        h1 {
            font-size: 48px;
            font-weight: 400;
            letter-spacing: -2px;
            line-height: 1;
            margin-bottom: 8px;
        }
        header p { color: var(--muted); }
        header a { color: var(--accent); }

        section { margin-bottom: 60px; }
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--fg);
        }
        h2 {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 400;
            color: var(--muted);
            margin: 0;
        }
        .view-toggle {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            user-select: none;
            text-decoration: none;
            color: inherit;
        }
        .view-toggle:hover h2 { color: var(--fg); }
        .chevron {
            font-size: 10px;
            transition: transform 0.2s;
        }
        .view-toggle.compact .chevron { transform: rotate(-90deg); }
        .sort-links, .filter-links {
            display: flex;
            gap: 12px;
            font-size: 12px;
        }
        .sort-links { margin-left: auto; }
        .filter-links { margin-left: 24px; }
        .sort-links a, .filter-links a {
            color: var(--muted);
            text-decoration: none;
        }
        .sort-links a:hover, .filter-links a:hover { color: var(--fg); }
        .sort-links a.active, .filter-links a.active {
            color: var(--fg);
            text-decoration: underline;
            text-underline-offset: 3px;
        }

        .schemes { display: flex; flex-direction: column; gap: 1px; }
        .schemes.sort-color .scheme { order: var(--color-order); }
        .schemes.filter-base16 .scheme[data-system="base24"] { display: none; }
        .schemes.filter-base24 .scheme[data-system="base16"] { display: none; }
        .schemes.grid-view {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 8px;
        }
        @media (max-width: 900px) {
            .schemes.grid-view { grid-template-columns: repeat(4, 1fr); }
        }
        @media (max-width: 600px) {
            .schemes.grid-view { grid-template-columns: repeat(3, 1fr); }
        }
        .scheme {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 40px;
            padding: 16px 12px;
            margin: 0 -12px;
            text-decoration: none;
            color: inherit;
            transition: background-color 0.1s, color 0.1s;
        }
        .scheme:hover { background: var(--fg); color: var(--bg); }
        .scheme:focus-visible { outline: 2px solid var(--accent); outline-offset: 4px; }
        .scheme.kbd-selected { background: color-mix(in srgb, var(--fg) 20%, transparent); }
        .scheme-name { font-weight: 400; font-size: 18px; }
        .scheme-palette { height: 24px; }
        .scheme[data-system="base24"] .scheme-palette-bar { height: 48px; }
        .scheme-palette svg { width: 100%; height: 100%; display: block; }
        .scheme-palette-grid { display: none; }
        .grid-view .scheme-palette-bar { display: none; }
        .grid-view .scheme-palette-grid { display: block; }

        .grid-view .scheme {
            display: block;
            padding: 0;
            margin: 0;
            position: relative;
            aspect-ratio: 1;
        }
        .grid-view .scheme:hover { background: transparent; }
        .grid-view .scheme.kbd-selected { outline: 3px solid var(--accent); outline-offset: -3px; background: transparent; }
        .grid-view .scheme.kbd-selected .scheme-name { opacity: 1; }
        .grid-view .scheme-name {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0,0,0,0.85);
            color: #fff;
            font-size: 12px;
            padding: 8px 10px;
            opacity: 0;
            transition: opacity 0.15s;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .grid-view .scheme:hover .scheme-name { opacity: 1; }
        .grid-view .scheme-palette {
            width: 100%;
            height: 100%;
        }

        .templates {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        .template {
            color: var(--fg);
            text-decoration: none;
            padding: 4px 0;
            border-bottom: 1px solid transparent;
        }
        .template:hover { border-bottom-color: var(--fg); }
        .template::after { content: ','; color: var(--muted); }
        .template:last-child::after { content: ''; }

        footer {
            margin-top: 80px;
            padding-top: 20px;
            border-top: 1px solid var(--fg);
            font-size: 12px;
            color: var(--muted);
        }

        .search-box {
            display: none;
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 100;
        }
        .search-box.active { display: block; }
        .search-box input {
            font-family: inherit;
            font-size: 18px;
            padding: 12px 20px;
            border: 2px solid var(--fg);
            background: var(--bg);
            color: var(--fg);
            width: 400px;
            max-width: 90vw;
            outline: none;
        }
        .search-box input::placeholder { color: var(--muted); }
        .scheme.search-hidden { display: none !important; }
    </style>
</head>
<body>
    <div class="search-box" id="search-box">
        <input type="text" id="search-input" placeholder="Search schemes...">
    </div>
    <div class="container">
        <header>
            <h1>base16.sh</h1>
            <p>color schemes for terminals + editors / <a href="/--help">api</a> / <a href="/--random">random</a></p>
        </header>

        <section>
            <div class="section-header">
                <div class="view-toggle{{#view-grid}} compact{{/view-grid}}" onclick="toggleView()">
                    <span class="chevron">â–¼</span>
                    <h2>Schemes ({{scheme-count}})</h2>
                </div>
                <div class="filter-links">
                    <a href="#" onclick="setFilter('all'); return false" {{#filter-all}}class="active"{{/filter-all}}>all</a>
                    <a href="#" onclick="setFilter('base16'); return false" {{#filter-base16}}class="active"{{/filter-base16}}>base16 ({{base16-count}})</a>
                    <a href="#" onclick="setFilter('base24'); return false" {{#filter-base24}}class="active"{{/filter-base24}}>base24 ({{base24-count}})</a>
                </div>
                <div class="sort-links">
                    <a href="/?{{#view-grid}}view=grid{{/view-grid}}" onclick="setSort('name'); return false" {{#sort-by-name}}class="active"{{/sort-by-name}}>name</a>
                    <a href="/?sort=color{{#view-grid}}&view=grid{{/view-grid}}" onclick="setSort('color'); return false" {{#sort-by-color}}class="active"{{/sort-by-color}}>color</a>
                </div>
            </div>
            <div id="schemes" class="schemes{{#view-grid}} grid-view{{/view-grid}}{{#sort-by-color}} sort-color{{/sort-by-color}}{{#filter-base16}} filter-base16{{/filter-base16}}{{#filter-base24}} filter-base24{{/filter-base24}}">
{{#schemes}}
                <a href="/{{name}}" class="scheme" data-system="{{system}}" style="--color-order: {{color-order}}">
                    <span class="scheme-name">{{name}}</span>
                    <span class="scheme-palette scheme-palette-bar">{{{palette-svg}}}</span>
                    <span class="scheme-palette scheme-palette-grid">{{{palette-grid-svg}}}</span>
                </a>
{{/schemes}}
            </div>
        </section>

        <section>
            <h2>Templates ({{template-count}})</h2>
            <div class="templates">
{{#templates}}
                <a href="/monokai/{{name}}" class="template">{{name}}</a>
{{/templates}}
            </div>
        </section>

        <footer>
            base16 / base24 color schemes
        </footer>
    </div>
    <script>
        // Restore scroll position when returning to index
        const savedScroll = sessionStorage.getItem('indexScrollY');
        const savedKbdIndex = sessionStorage.getItem('indexKbdIndex');
        if (savedScroll) {
            sessionStorage.removeItem('indexScrollY');
            sessionStorage.removeItem('indexKbdIndex');
            window.scrollTo(0, parseInt(savedScroll, 10));
        }
        function saveScrollAndNavigate(url, index) {
            sessionStorage.setItem('indexScrollY', window.scrollY);
            sessionStorage.setItem('indexKbdIndex', index);
            location.href = url;
        }
        function updateUrl() {
            const params = new URLSearchParams();
            const schemes = document.getElementById('schemes');
            if (schemes.classList.contains('grid-view')) {
                params.set('view', 'grid');
            }
            if (schemes.classList.contains('sort-color')) {
                params.set('sort', 'color');
            }
            if (schemes.classList.contains('filter-base16')) {
                params.set('filter', 'base16');
            } else if (schemes.classList.contains('filter-base24')) {
                params.set('filter', 'base24');
            }
            const url = params.toString() ? '?' + params.toString() : '/';
            history.pushState({}, '', url);
        }
        function toggleView() {
            document.querySelector('.view-toggle').classList.toggle('compact');
            document.getElementById('schemes').classList.toggle('grid-view');
            updateUrl();
        }
        function setSort(mode) {
            const schemes = document.getElementById('schemes');
            const links = document.querySelectorAll('.sort-links a');

            // Find scroll anchor: hovered scheme, or kbd-selected, or closest to viewport center
            let anchorScheme = document.querySelector('.scheme:hover') || document.querySelector('.scheme.kbd-selected');
            if (!anchorScheme) {
                let minDist = Infinity;
                document.querySelectorAll('.scheme').forEach(s => {
                    if (getComputedStyle(s).display === 'none') return;
                    const rect = s.getBoundingClientRect();
                    const dist = Math.abs(rect.top + rect.height / 2 - window.innerHeight / 2);
                    if (dist < minDist) {
                        minDist = dist;
                        anchorScheme = s;
                    }
                });
            }
            const anchorOffset = anchorScheme ? anchorScheme.getBoundingClientRect().top : 0;

            if (mode === 'color') {
                schemes.classList.add('sort-color');
                links[0].classList.remove('active');
                links[1].classList.add('active');
            } else {
                schemes.classList.remove('sort-color');
                links[0].classList.add('active');
                links[1].classList.remove('active');
            }

            // Scroll to keep anchor scheme in same viewport position
            if (anchorScheme) {
                const newRect = anchorScheme.getBoundingClientRect();
                window.scrollBy(0, newRect.top - anchorOffset);
            }

            // Update kbdIndex if there was a selection
            const selected = document.querySelector('.scheme.kbd-selected');
            if (selected) {
                const visible = getVisibleSchemes();
                kbdIndex = visible.indexOf(selected);
            }
            updateUrl();
        }
        function setFilter(mode) {
            const schemes = document.getElementById('schemes');
            const links = document.querySelectorAll('.filter-links a');
            const selected = document.querySelector('.scheme.kbd-selected');
            schemes.classList.remove('filter-base16', 'filter-base24');
            links.forEach(l => l.classList.remove('active'));
            if (mode === 'base16') {
                schemes.classList.add('filter-base16');
                links[1].classList.add('active');
            } else if (mode === 'base24') {
                schemes.classList.add('filter-base24');
                links[2].classList.add('active');
            } else {
                links[0].classList.add('active');
            }
            // Update kbdIndex to match new visible list
            if (selected) {
                const visible = getVisibleSchemes();
                const newIndex = visible.indexOf(selected);
                if (newIndex >= 0) {
                    kbdIndex = newIndex;
                } else {
                    // Selected item is now hidden, clear selection
                    selected.classList.remove('kbd-selected');
                    kbdIndex = -1;
                }
            }
            updateUrl();
        }
        window.addEventListener('popstate', () => location.reload());
        document.getElementById('schemes').addEventListener('click', function(e) {
            const link = e.target.closest('.scheme');
            if (link) {
                e.preventDefault();
                const visible = getVisibleSchemes();
                const index = visible.indexOf(link);
                const url = this.classList.contains('sort-color') ? link.href + '?order=color' : link.href;
                saveScrollAndNavigate(url, index);
            }
        });

        // Quick search
        const searchBox = document.getElementById('search-box');
        const searchInput = document.getElementById('search-input');
        function openSearch() {
            searchBox.classList.add('active');
            searchInput.value = '';
            searchInput.focus();
            document.querySelectorAll('.scheme').forEach(s => s.classList.remove('search-hidden'));
        }
        function closeSearch() {
            searchBox.classList.remove('active');
            searchInput.value = '';
            document.querySelectorAll('.scheme').forEach(s => s.classList.remove('search-hidden'));
        }
        function filterSchemes(query) {
            const q = query.toLowerCase();
            document.querySelectorAll('.scheme').forEach(s => {
                const name = s.querySelector('.scheme-name').textContent.toLowerCase();
                s.classList.toggle('search-hidden', q && !name.includes(q));
            });
            kbdIndex = -1;
            const visible = getVisibleSchemes();
            if (visible.length > 0) updateKbdSelection(0);
        }
        searchInput.addEventListener('input', (e) => filterSchemes(e.target.value));
        searchInput.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') { closeSearch(); e.preventDefault(); }
            else if (e.key === 'Enter') { navigateToSelected(); e.preventDefault(); }
            else if (e.key === 'ArrowDown' || (e.key === 'n' && e.ctrlKey)) { updateKbdSelection(kbdIndex + 1); e.preventDefault(); }
            else if (e.key === 'ArrowUp' || (e.key === 'p' && e.ctrlKey)) { updateKbdSelection(kbdIndex - 1); e.preventDefault(); }
        });

        // Vim-style keyboard navigation
        let kbdIndex = -1;
        function getVisibleSchemes() {
            const schemes = document.getElementById('schemes');
            const visible = Array.from(schemes.querySelectorAll('.scheme')).filter(s => {
                return getComputedStyle(s).display !== 'none';
            });
            if (schemes.classList.contains('sort-color')) {
                visible.sort((a, b) => {
                    const orderA = parseInt(a.style.getPropertyValue('--color-order')) || 0;
                    const orderB = parseInt(b.style.getPropertyValue('--color-order')) || 0;
                    return orderA - orderB;
                });
            }
            return visible;
        }
        function updateKbdSelection(newIndex) {
            const visible = getVisibleSchemes();
            if (visible.length === 0) return;
            document.querySelectorAll('.scheme.kbd-selected').forEach(s => s.classList.remove('kbd-selected'));
            kbdIndex = Math.max(0, Math.min(newIndex, visible.length - 1));
            const selected = visible[kbdIndex];
            selected.classList.add('kbd-selected');
            selected.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
        }
        // Restore keyboard selection when returning to index
        if (savedKbdIndex !== null) {
            const idx = parseInt(savedKbdIndex, 10);
            const visible = getVisibleSchemes();
            if (idx >= 0 && idx < visible.length) {
                kbdIndex = idx;
                visible[idx].classList.add('kbd-selected');
            }
        }
        function navigateToSelected() {
            const visible = getVisibleSchemes();
            if (kbdIndex >= 0 && kbdIndex < visible.length) {
                const link = visible[kbdIndex];
                const schemes = document.getElementById('schemes');
                const url = schemes.classList.contains('sort-color') ? link.href + '?order=color' : link.href;
                saveScrollAndNavigate(url, kbdIndex);
            }
        }
        function getGridColumns() {
            const schemes = document.getElementById('schemes');
            if (!schemes.classList.contains('grid-view')) return 1;
            const visible = getVisibleSchemes();
            if (visible.length < 2) return 1;
            const firstTop = visible[0].getBoundingClientRect().top;
            for (let i = 1; i < visible.length; i++) {
                if (visible[i].getBoundingClientRect().top !== firstTop) return i;
            }
            return visible.length;
        }
        document.addEventListener('keydown', function(e) {
            if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
            const visible = getVisibleSchemes();
            const schemes = document.getElementById('schemes');
            const cols = getGridColumns();
            const isGrid = cols > 1;
            switch (e.key) {
                case 'h': if (isGrid) { updateKbdSelection(kbdIndex - 1); e.preventDefault(); } break;
                case 'j': updateKbdSelection(kbdIndex + cols); e.preventDefault(); break;
                case 'k': updateKbdSelection(kbdIndex - cols); e.preventDefault(); break;
                case 'l': if (isGrid) { updateKbdSelection(kbdIndex + 1); } else { navigateToSelected(); } e.preventDefault(); break;
                case 'g': if (!e.shiftKey) { updateKbdSelection(0); e.preventDefault(); } break;
                case 'G': updateKbdSelection(visible.length - 1); e.preventDefault(); break;
                case 'Enter': navigateToSelected(); e.preventDefault(); break;
                case 'o': setSort(schemes.classList.contains('sort-color') ? 'name' : 'color'); e.preventDefault(); break;
                case ' ': toggleView(); e.preventDefault(); break;
                case '/': openSearch(); e.preventDefault(); break;
                case 'Escape': closeSearch(); e.preventDefault(); break;
                case '?':
                    alert('Keyboard shortcuts:\n\nhjkl    navigate (arrows in grid)\ng       first scheme\nG       last scheme\nl/Enter open scheme (list view)\nEnter   open scheme (grid view)\no       toggle sort (name/color)\nSpace   toggle view (list/grid)\n/       search\nEsc     close search\n?       show this help');
                    e.preventDefault();
                    break;
            }
        });
    </script>
</body>
</html>
